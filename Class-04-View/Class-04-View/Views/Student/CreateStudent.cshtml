        <form method="post" action = "createStudent">
            <div>
                <label for="FirstName">
                    First Name:
                </label>
                 <input type ="text" id="FirstName" 
                     name="FirstName"/>
                     
            </div>
            <div>
                <label for="LastName">
                    Last Name:
                </label>
                <input type="text" id="LastName"
                       name="LastName" />
           </div>
            <div>
                <label for="DateOfbirth">
                    Dateofbirth:
