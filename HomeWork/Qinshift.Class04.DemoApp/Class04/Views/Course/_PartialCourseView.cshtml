@using Class04.Models.DtoModel
@model IEnumerable<CourseDto>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                CourseName
            </th>
            <th>
                CourseId
            </th>
            <th>
                NumberOfClasses
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (CourseDto item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.NumberOfClasses
                </td>
            </tr>
        }
    </tbody>

</table>