@using Class04.Models.ViewModels
@model CreateCourseVM

<h2>Create Course</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" action="createCourse">
            <div>
                <label for="Name">Course Name:</label>
                <input type="text" id="Name" name="Name" />
            </div>
            <div>
                <label for="Course Id">Course Id:</label>
                <input type="number" id="Id" name="CourseId" />
            </div>
            <div>
                <label for="NumberOfCourses">Number Of Courses:</label>
                <input type="number" id="NumberOfCourses" name="NumberOfCourses" />
            </div>
            <button type="submit">Create</button>
        </form>
    </div>

</div>